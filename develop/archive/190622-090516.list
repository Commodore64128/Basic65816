120 pattern$(0 )  = "FRRDFDFDRFD"
121 pattern$(1 )  = "FRRDFDFDLFD"
122 pattern$(2 )  = "FFRRDFDFDFD"
123 pattern$(3 )  = "DFDRFDRFD"
124 pattern$(4 )  = "FRRDFDRFDLFD"
