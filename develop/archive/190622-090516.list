4997 REM
4998 REM "5000-draw 5010-erase 5020-test"
4999 REM
5000 c = 233 :  GOTO 5030
5010 c = 32 :  GOTO 5030
5020 c =  - 1 : hit = 0
5030 x1 = x : y1 = y : d1 = dir
5040 IF i = 1 TO  LEN( pattern$ )
5050 c$ =  UPPER$(  MID$( pattern$ , i , 1 )  )
5060 WHILE c$ = "L" UNTIL d1 =  ( d1 - 1 )  & 3
5070 WHILE c$ = "R" UNTIL d1 =  ( d1 + 1 )  & 3
5080 WHILE c$ = "F"
5090 WHILE d1 = 0 | d1 = 2 UNTIL x1 = x1 + d1 - 1
5100 WHILE d1 = 1 | d1 = 3 UNTIL y1 = y1 - d1 + 2
5110 THEN
5120 WHILE c$ = "D"
5125 addr = x1 + y1 * width + screen
5130 WHILE c >= 0
5140 POKE addr , c
5150 ELSE
5160 WHILE  PEEK( addr )  <> 32 UNTIL hit = 1
5180 THEN
5185 THEN
5190 ENDIF i
5200 RETURN
5990 REM
5991 REM "Draw frame"
5992 REM
6000 xframe = 4 : yframe = 4
6010 IF y = yframe TO yframe + 20
6020 POKE screen + y * width + xframe , 127
6025 POKE screen + y * width + xframe + fwidth + 1 , 127
6030 ENDIF
6040 FOR i = 0 TO fwidth + 1
6050 POKE screen +  ( yframe + 20 )  * width + xframe + i , 127
6060 NEXT
6070 RETURN